@model IEnumerable<CFApp.Data.TestEntity>

@{
    ViewBag.Title = "Index";
}



<h2>Tablo</h2>

<p>
   @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" /></p>
}


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Surname)
        </th>
         <th>
            @Html.DisplayNameFor(model=> model.No)
        </th>
    </tr>



    @foreach(var item in Model){
        <tr>
            <td>
                @Html.DisplayFor(ItemModel => item.Name)
            </td>

            <td>
                @Html.DisplayFor(ItemModel => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(ItemModel => item.No)
            </td>
            
        <td>
            @Html.ActionLink("Delete", "Delete", new { id= item.Id })
        </td>

         <td>
            @Html.ActionLink("Update", "Update", new { id= item.Id })
        </td>
         <td>
            @Html.ActionLink("Details", "Details", new { id= item.Id })
         </td>
        </tr> 
    }



</table>

